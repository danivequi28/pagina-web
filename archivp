    <script>
        const menuToggleBtn = document.querySelector(".menu-toggle");
        const navOverlay = document.querySelector(".nav-overlay");
        const drawerCloseBtn = document.querySelector(".drawer-close");

        const openDrawer = () => {
            navOverlay.classList.add("is-visible");
            navOverlay.setAttribute("aria-hidden", "false");
            document.body.classList.add("menu-open");
            menuToggleBtn.setAttribute("aria-expanded", "true");
        };

        const closeDrawer = () => {
            navOverlay.classList.remove("is-visible");
            navOverlay.setAttribute("aria-hidden", "true");
            document.body.classList.remove("menu-open");
            menuToggleBtn.setAttribute("aria-expanded", "false");
        };

        menuToggleBtn.addEventListener("click", openDrawer);
        drawerCloseBtn.addEventListener("click", closeDrawer);
        navOverlay.addEventListener("click", (event) => {
            if (event.target === navOverlay) {
                closeDrawer();
            }
        });

        const fab = document.querySelector(".accessibility-fab");
        const panel = document.querySelector(".accessibility-panel");
        const closePanelBtn = document.querySelector(".panel-close");
        const scaleLabel = document.querySelector("[data-text-scale]");
        const textButtons = document.querySelectorAll(".text-scale-button");
        const switchButtons = document.querySelectorAll(".access-switch");
        const fontChoices = document.querySelectorAll(".font-choice");
        let textScale = 1;

        const updateScale = () => {
            const clamped = Math.min(1.4, Math.max(0.85, textScale));
            textScale = clamped;
            document.documentElement.style.setProperty("--text-scale", clamped);
            scaleLabel.textContent = Math.round(clamped * 100) + "%";
        };

        const openPanel = () => {
            panel.classList.add("is-visible");
            panel.setAttribute("aria-hidden", "false");
            fab.setAttribute("aria-expanded", "true");
        };

        const closePanel = () => {
            panel.classList.remove("is-visible");
            panel.setAttribute("aria-hidden", "true");
            fab.setAttribute("aria-expanded", "false");
        };

        const handleEsc = (event) => {
            if (event.key === "Escape") {
                if (navOverlay.classList.contains("is-visible")) {
                    closeDrawer();
                }
                if (panel.classList.contains("is-visible")) {
                    closePanel();
                }
            }
        };

        document.addEventListener("keydown", handleEsc);

        fab.addEventListener("click", () => {
            const isOpen = panel.classList.contains("is-visible");
            if (isOpen) {
                closePanel();
            } else {
                openPanel();
            }
        });

        const accessButtons = document.querySelectorAll("[data-open-access-panel]");
        accessButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                closeDrawer();
                openPanel();
            });
        });

        closePanelBtn.addEventListener("click", closePanel);

        switchButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const current = btn.getAttribute("aria-checked") === "true";
                const nextState = !current;
                btn.setAttribute("aria-checked", String(nextState));
                const targetClass = btn.dataset.toggleClass;
                if (targetClass) {
                    document.body.classList.toggle(targetClass, nextState);
                }
            });
        });

        textButtons.forEach((btn) => {
            btn.addEventListener("click", () => {
                const delta = parseFloat(btn.dataset.scaleStep);
                textScale += delta;
                updateScale();
            });
        });
        updateScale();

        fontChoices.forEach((choice) => {
            choice.addEventListener("click", () => {
                fontChoices.forEach((item) => item.setAttribute("aria-checked", "false"));
                choice.setAttribute("aria-checked", "true");
                document.body.classList.remove("font-accessible", "font-dyslexic");
                const bodyClass = choice.dataset.fontClass;
                document.body.classList.add(bodyClass);
            });
        });

        // Que la opci\u00f3n accesible est\u00e9 activa por defecto
        document.body.classList.add("font-accessible");
    </script>
</body>
